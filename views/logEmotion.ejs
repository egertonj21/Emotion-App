<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="../styles/style.css" rel="stylesheet" />
    <title>Log Emotions</title>
</head>
<body>
    <%- include("partials/header.ejs") %>
    <% if (error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <% if (message) { %>
        <div class="alert alert-info" role="alert">
            <%= message %>
        </div>
    <% } %>
    <form method="post" action="/logEmotions" class="container mt-4">
        <div class="mb-3 text-center">
            <label for="enjoymentRange" class="form-label">Enjoyment:</label>
            <input type="range" id="enjoymentRange" class="form-range" name="enjoyment" min="0" max="10">
            <span id="enjoymentValue">5</span>
        </div>
        <div class="mb-3 text-center">
            <label for="sadnessRange" class="form-label">Sadness:</label>
            <input type="range" id="sadnessRange" class="form-range" name="sadness" min="0" max="10">
            <span id="sadnessValue">5</span>
        </div>
        <div class="mb-3 text-center">
            <label for="angerRange" class="form-label">Anger:</label>
            <input type="range" id="angerRange" class="form-range" name="anger" min="0" max="10">
            <span id="angerValue">5</span>
        </div>
        <div class="mb-3 text-center">
            <label for="contemptRange" class="form-label">Contempt:</label>
            <input type="range" id="contemptRange" class="form-range" name="contempt" min="0" max="10">
            <span id="contemptValue">5</span>
        </div>
        <div class="mb-3 text-center">
            <label for="disgustRange" class="form-label">Disgust:</label>
            <input type="range" id="disgustRange" class="form-range" name="disgust" min="0" max="10">
            <span id="disgustValue">5</span>
        </div>
        <div class="mb-3 text-center">
            <label for="fearRange" class="form-label">Fear:</label>
            <input type="range" id="fearRange" class="form-range" name="fear" min="0" max="10">
            <span id="fearValue">5</span>
        </div>
        <div class="mb-3 text-center">
            <label for="surpriseRange" class="form-label">Surprise:</label>
            <input type="range" id="surpriseRange" class="form-range" name="surprise" min="0" max="10">
            <span id="surpriseValue">5</span>
        </div>
        <div class="mb-3 text-center">
            <input class="form-control" type="text" placeholder="Add any contextual info here which may have affected your current emotional state" name="triggers">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <form method="GET" action="/view">
                    <button type="submit" class="btn btn-secondary">Back to Menu</button>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/emotions.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <%- include("partials/footer.ejs") %>
</body>
</html>
