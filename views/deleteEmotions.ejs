<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Delete Emotion Logs for User</title>
</head>
<body>
    <%- include("partials/header.ejs") %>
    <% if (error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <% if (message) { %>
        <div class="alert alert-info" role="alert">
            <%= message %>
        </div>
    <% } %>

    <div class="container mt-4">
        <table id="emotionTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Enjoyment</th>
                    <th>Sadness</th>
                    <th>Anger</th>
                    <th>Contempt</th>
                    <th>Fear</th>
                    <th>Disgust</th>
                    <th>Surprise</th>
                    <th>Timestamp</th>
                    <th>Triggers</th>
                    
                </tr>
            </thead>
            <tbody>
                <% emotions.forEach(function(emotion) { %>
                    <tr>
                        <td><%= emotion.emotion_id %></td>
                        <td><%= emotion.enjoyment %></td>
                        <td><%= emotion.sadness %></td>
                        <td><%= emotion.anger %></td>
                        <td><%= emotion.contempt %></td>
                        <td><%= emotion.fear %></td>
                        <td><%= emotion.disgust %></td>
                        <td><%= emotion.surprise %></td>
                        <td><%= emotion.timestamp %></td>
                        <td style="word-wrap: break-word; max-width: 300px;"><%= emotion.triggers %></td>
                        
                        
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div class="mt-4">
            <form method="POST" action="/deleteEmotions">
                <button type="submit" class="btn btn-danger">Delete All Emotion Logs</button>
            </form>
        </div>
        

        <div class="mt-4">
            <form method="GET" action="/account">
                <button type="submit" class="btn btn-secondary">Back to Account</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/emotionLog.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <%- include("partials/footer.ejs") %>
</body>
</html>
