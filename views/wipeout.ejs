<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Delete Logs and User</title>
</head>
<body>
    
    <!-- Include header -->
    <%- include("partials/header.ejs") %>

    <!-- Display error message if any -->
    <% if (error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>

    <!-- Display info message if any -->
    <% if (message) { %>
        <div class="alert alert-info" role="alert">
            <%= message %>
        </div>
    <% } %>

    <!-- Delete form with confirmation -->
    <form method="POST" action="/deleteAll" onsubmit="return confirmDelete()">
        <!-- Include a hidden input field to specify the DELETE method -->
        <input type="hidden" name="_method" value="DELETE">
        <div class="container">
            <h1>Click the button below to delete your logs and account. Note: This action cannot be undone.</h1>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-danger">Delete Logs and Account</button>
            </div>
        </div>
    </form>

    <!-- Back to Account button -->
    <div class="container">
        <div class="col">
            <form method="GET" action="/account">
                <button type="submit" class="btn btn-secondary">Back to Account</button>
            </form>
        </div>
    </div>

    <!-- Include footer -->
    <%- include("partials/footer.ejs") %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <script>
        function confirmDelete() {
            if (confirm("Are you sure you want to delete your logs and account? This action cannot be undone.")) {
                document.getElementById("deleteForm").submit();
            }
        }
    </script>
</body>
</html>
