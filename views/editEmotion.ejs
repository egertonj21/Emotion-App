<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Emotion</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <%- include("partials/header.ejs") %>
    
    <div class="container mt-4">
        <% if (error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if (message) { %>
            <div class="alert alert-info" role="alert">
                <%= message %>
            </div>
        <% } %>
        <form method="POST" action="/putTriggers" class="mb-4">
            <input type="hidden" name="emotion_id" value="<%= emotion[0].emotion_id %>">
            <table id="emotionTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="align-middle">Id</th>
                        <th class="align-middle">Enjoyment</th>
                        <th class="align-middle">Sadness</th>
                        <th class="align-middle">Anger</th>
                        <th class="align-middle">Contempt</th> 
                        <th class="align-middle">Fear</th>
                        <th class="align-middle">Disgust</th>
                        <th class="align-middle">Surprise</th>
                        <th class="align-middle">Current Triggers</th>
                        <th class="align-middle">Enter Updated Triggers</th>
                    </tr>
                </thead>
                <tbody>
                    <% emotion.forEach(function(emotion) { %>
                        <tr>
                            <td class="align-middle" name ="emotion_id"><%= emotion.emotion_id %></td>
                            <td class="align-middle"><%= emotion.enjoyment %></td>
                            <td class="align-middle"><%= emotion.sadness %></td>
                            <td class="align-middle"><%= emotion.anger %></td>
                            <td class="align-middle"><%= emotion.contempt %></td>
                            <td class="align-middle"><%= emotion.fear %></td>
                            <td class="align-middle"><%= emotion.disgust %></td>
                            <td class="align-middle"><%= emotion.surprise %></td>
                            <td class="align-middle" style="word-wrap: break-word; max-width: 300px;"><%= emotion.triggers %></td>
                            <td class="align-middle">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control"  name="triggers">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </form>
    

        <div class="row">
            <div class="col">
                <form method="GET" action="/emotionLog">
                    <button type="submit" class="btn btn-secondary">Back to Emotion List</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <%- include("partials/footer.ejs") %>
</body>
</html>
